{
  "name": "crsc/wp-utilities",
  "description": "A collection of WordPress and WooCommerce utility classes and traits used across CRSC plugins.",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Chesapeake Region Safety Council",
      "homepage": "https://www.chesapeakesc.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "CRSC\\WPUtilities\\": "src/"
    }
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "dingo-d/wp-pest-integration-test-setup": "^1.6",
    "ergebnis/composer-normalize": "^2.47",
    "phpcompatibility/php-compatibility": "*",
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "composer-normalize": {
      "indent-size": 2,
      "indent-style": "space"
    }
  },
  "scripts": {
    "phpcbf": "vendor/bin/phpcbf",
    "phpcs": "vendor/bin/phpcs"
  },
  "optimize-autoloader": true
}
